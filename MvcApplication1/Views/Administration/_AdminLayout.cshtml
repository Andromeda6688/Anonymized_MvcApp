<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" type="text/css" href="/Content/Style.css">
</head>
<body>
    <div class="wrapper">
        <!--HEADER-->
        <header>
            <div class="horisontal_line">
                <div class="horisontal_line_item">
                    <a href="~/Admin"><img src="/imgs/menu_pic.png" width="34px" height="34px" /></a>
                </div>
                @{Html.RenderAction("CurrentUserPartial", "Account");    }
            </div>
            <div class="container">
                <div id="info_line">
                    <div id="logo_div" class="col-2-3">
                        <a href="@Url.Action("Index", "Home", new { PageName=""})"><img id="logo" src="/imgs/anonym_logo.png" /></a>
                    </div>
                    <div class="col-1-3">
                        <div id="address_div">
                            <p>(nnnn)<span class="big_text"> NN-NN-NN</span></p>
                            <p><a href="mailto:info@company.ru">info@company.ru</a></p>
                        </div>
                    </div>
                </div>
                <nav>
                    @{Html.RenderAction("AdminMenuPartial", "Administration");    }
                </nav>
                <div class="small_img"> </div>
            </div>
        </header>

        <!--PAGE-->
        <div class="main">
            <div class="container">
                @RenderBody()
            </div>
        </div>

        <div class="buffer"></div>
    </div>

    <!--FOOTER-->
    <footer>
        <div class="horisontal_line">
            <p>&copy; @DateTime.Now.Year - CompanyName. The site design uses an @Html.ActionLink("artist's", "Index", "Artist") painting. Free engine by <a href="mailto:zgazhelskaia@gmail.com">web-studio "Pro-Log"</a></p>
        </div>
    </footer>
</body>
</html>
