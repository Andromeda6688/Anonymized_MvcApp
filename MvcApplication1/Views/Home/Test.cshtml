    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" type="text/css" href="/Content/TestStyle.css">
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="horisontal_line">
                <div class="horisontal_line_item">
                    <img src="/imgs/menu_pic.png" width="20px" height="20px" />
