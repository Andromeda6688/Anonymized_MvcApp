@model MvcApplication1.Models.RegisterModel
@{
    Layout = "~/Views/Administration/_AdminLayout.cshtml";
}

<h1>Создать новый аккаунт</h1>
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div>

    <section>
        <fieldset class="small">
            <legend>Регистрация</legend>
@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()
        @Html.ValidationSummary()
            <ul>
                <li>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </li>

                <li>
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </li>
                <li>
                    @Html.LabelFor(m => m.IsActive)
                    @Html.CheckBoxFor(m => m.IsActive)
                    @Html.ValidationMessageFor(m => m.IsActive)
                </li>
                <li>
                    @Html.LabelFor(m => m.IsAdmin)
                    @Html.CheckBoxFor(m => m.IsAdmin)
                    @Html.ValidationMessageFor(m => m.IsAdmin)
                </li>
            </ul>
              
            <div class="buttons">
                <input class="approve_button" type="submit" value="Создать" />
                <input class="cancel_button" type="button" value="Отменить"
                       onclick="location.href='@Url.Action("UserList", "Account")'" />
            </div> 
}
        </fieldset>
    </section>
</div>
