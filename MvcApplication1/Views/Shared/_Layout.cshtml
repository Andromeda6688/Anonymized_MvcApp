<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("SEO", required: false)
    <link rel="stylesheet" type="text/css" href="/Content/LCKStyle.css">
    @RenderSection("Scripts", required: false)    
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="horisontal_line">
                <div class="horisontal_line_item">
                    <a href="~/Admin"><img src="/imgs/menu_pic.png" width="34px" height="34px" /></a>
                </div>
                @{Html.RenderAction("CurrentUserPartial", "Account");}
            </div>
            <div class="container">
               
                    <div id="info_line">
                        <div id="logo_div" class="col-2-3">
                            <a href="@Url.Action("Index", "Home", new { PageName=""})"><img id="logo" src="/imgs/LOGO_white.png" /></a>
                        </div>
                        <div class="col-1-3">
                            <div id="address_div">
                                <p>(4842)<span class="big_text"> 77-00-44</span></p>
                                <p><a href="mailto:zakaz@lc-kaluga.ru">zakaz@lc-kaluga.ru</a></p>
                            </div>
                        </div>
                    </div>
                    <nav>
                        @{Html.RenderAction("NavMenuPartial", "Home");    }
                    </nav>
                    <div class="small_img"> </div>
                
            </div>
        </header>

        <!--PAGE-->
        <div class="main">
            <div class="container">
                <div class="main_content">
                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="buffer"></div>
    </div>

    <!--FOOTER-->
    <footer>
        <div class="horisontal_line">
            <p>&copy; @DateTime.Now.Year - Light Communication Kaluga. В оформлении использована работа @Html.ActionLink("Шубина А.П.", "Index", "Shubin")</p>
        </div>
    </footer>
</body>
</html>
